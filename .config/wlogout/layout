",
    "text" : "Lock",
    "keybind" : "l"
}
{
    "label" : "hibernate",
    "action" : "sleep 1; systemctl hibernate",
    "text" : "Hibernate",
    "keybind" : "h"
}
{
    "label" : "logout",
    "action" : "sleep 1; hyprctl dispatch exit",
    "text" : "Exit",
    "keybind" : "e"
}
{
    "label" : "shutdown",
    "action" : "umount -f ~/nas; sleep 3; systemctl poweroff",
    "text" : "Shutdown (S)",
    "keybind" : "s"
}
{
    "label" : "suspend",
    "action" : "sleep 1; hyprlock && sleep 3 && systemctl suspend",
    "text" : "Suspend (U)",
    "keybind" : "u"
}
{
    "label" : "reboot",
    "action" : "umount -f ~/nas; sleep 3; systemctl reboot",
    "text" : "Reboot",
    "keybind" : "r"
}
